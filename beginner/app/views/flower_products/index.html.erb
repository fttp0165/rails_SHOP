
   
<div class="container-fluid">
<div class="row">
	
	<%= render partial:'flower/nav'%>

	<div  class="jumbotron" style="background-color: #EADAC8;height:5px; ">
	</div>
	<div  class="jumbotron" style="background-color: #EADAC8;">
		<div class="row">
			<div class="col-xs-12 col-md-3" >

					<% @flower_category.each do |category,| %>
					<ul class="list-group " style="background-color: #EADAC8;">
						
						<li class="list-group-item col-xs-12">
							<%= category.try(:name)%>
								<ul class="list-group col-xs-12" >
								<% category.flower_sub_category.each do |sub_category| %>
								<li class="list-group-item col-xs-12"><%= sub_category.try(:name)%></li>
								<%end%>
								</ul>	
						</li>
					
				   </ul>
				<%end%>
					
			</div>
			<div class="col-xs-12 col-md-9">
				<div class="row">
						<% @bundle_flower.each do |product|%>
								<div class="col-xs-12 col-md-3">
									  <div class="thumbnail"  style="background-color: #EADAC8;">
									     <%= render 'flower_products/card/card.html.erb',product: product%>
								    </div>
								</div>
						 <%end%>
					</div>
						<div class="row">
							<div class="col-xs-12">
									<nav aria-label="Page navigation">
									  <ul class="pagination">
									  	<%if @page > 1%>
									    <li>
									      <%=link_to flower_products_path(page:(@page-1)) do%>
									        <span aria-hidden="true">&laquo;</span>
									      <%end%>
									    </li>
									    <%end%>
									    <% (@first_page..@last_page).each do |page_number|%>
									    <li><%=link_to page_number,flower_products_path(page: page_number)%></a></li>
									    <%end%>
									    <%if @page < @last_page%>
									    <li>
									    	  <%=link_to flower_products_path(page:(@page+1)) do%>
									       			<span aria-hidden="true">&raquo;</span>
									      	<%end%>
									    </li>
									    <%end%>

									  </ul>
								</nav>	
							</div>
						</div>	

			    </div>
			</div>
		</div>			
	</div>


    <%= render partial:'flower/footbar'%>
</div>
</div>