<div class="thumbnail">
            <%= image_tag product.image_url %>
     <div class="caption">
                        <h3> <%= "#{product.id}. #{product.name}"%></h3>
                        <p><%= "#{product.description}"%></p>
                                   <%  if  current_user %>
                                    <div>
                                    <%= link_to  "Edit",edit_product_path(product), class:"btn btn-primary" %>
                                    <%= link_to  "Delete",product_path(product), method: :delete,class:"btn btn-danger",data:{confirm:"是否確定刪除？"} %>
                                    </div>
                                    <% end %>
          </div>
                  </div>
     </div>
